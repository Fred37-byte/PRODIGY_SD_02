<Window x:Class="PRODIGY_SD_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRODIGY_SD_02"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">

            <TextBlock 
        Text="Guess the Number (1 to 100)"
        FontSize="18"
        Margin="0,0,0,10"/>

            <TextBlock 
    Text="Enter your guess"
    FontSize="12"
    Foreground="Gray"
    Margin="0,0,0,5"
                x:Name="GuessText"/>

            <TextBox
    x:Name="GuessTextBox"
    Height="30"
    Margin="0,0,0,10"/>

            <Button 
        Content="Guess"
        Height="30"
        Click="GuessButton_Click"/>

            <TextBlock 
        x:Name="ResultText"
        FontSize="14"
        Margin="0,10,0,0"/>

        </StackPanel>

    </Grid>
</Window>
